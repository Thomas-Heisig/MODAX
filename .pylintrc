[MASTER]
# Use multiple processes to speed up Pylint
jobs=0

# Pickle collected data for later comparisons
persistent=yes

# List of plugins (as comma separated values of python modules names)
load-plugins=

# Discover python modules and packages in the file system subtree
recursive=yes

[MESSAGES CONTROL]
# Disable certain checks
disable=
    C0103,  # invalid-name (we allow short variable names in certain contexts)
    C0114,  # missing-module-docstring (not all modules need docstrings)
    C0115,  # missing-class-docstring (not all classes need docstrings)
    C0116,  # missing-function-docstring (not all functions need docstrings)
    R0903,  # too-few-public-methods (allow simple dataclasses)
    R0913,  # too-many-arguments (allow functions with many args)
    W0212,  # protected-access (we sometimes need to access protected members in tests)
    W0511,  # fixme (TODO comments are acceptable)
    C0411,  # wrong-import-order (let formatter handle this)

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# Maximum number of lines in a module
max-module-lines=1000

[BASIC]
# Good variable names
good-names=i,j,k,x,y,z,id,db,ok

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of attributes for a class
max-attributes=10

# Maximum number of boolean expressions in a if statement
max-bool-expr=5

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of parents for a class
max-parents=7

# Maximum number of public methods for a class
max-public-methods=25

# Maximum number of return / yield for function / method body
max-returns=8

# Maximum number of statements in function / method body
max-statements=60

# Minimum number of public methods for a class
min-public-methods=0

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=6

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically and missed by pylint inference
generated-members=

[VARIABLES]
# Tells whether we should check for unused import in __init__ files
init-import=no

[CLASSES]
# List of method names used to declare (i.e. assign) instance attributes
defining-attr-methods=__init__,__new__,setUp

[IMPORTS]
# Allow wildcard imports from modules that define __all__
allow-wildcard-with-all=no

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=BaseException,Exception
